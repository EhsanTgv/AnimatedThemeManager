<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/singleActivitySampleButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textColor="?colorAccent"
        app:cardBackgroundColor="#ebf3fa"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Just activities sample"
            android:textColor="@color/black" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragmentSampleButton"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textColor="?colorAccent"
        app:cardBackgroundColor="#ebf3fa"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Multi fragments and single activity sample"
            android:textColor="@color/black" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/reverseAnimation"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:textColor="?colorAccent"
        app:cardBackgroundColor="#ebf3fa"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Reverse animation"
            android:textColor="@color/black" />

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
